@model IEnumerable<WebPhongTro.Models.Phong>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}


<div class="main-content">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f2f4f5;
        }

        .main-content {
            max-width: 1000px;
            margin: 50px auto;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #ddd;
        }

        h2 {
            font-weight: 600;
            font-size: 28px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 40px;
        }

        th,
        td {
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color:salmon;
            color: #fff;
            text-transform: uppercase;
        }

        tr:nth-child(even) {
            background-color: #f2f4f5;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 4px;
            border: none;
            color: #fff;
            background-image: linear-gradient(to right,initial);
            transition: 0.3s ease;
        }
            
            .btn:hover {
                opacity: 0.8;
            }
        /* Nút Edit */
        .e1 {
            background-color: #3498db;
            color: #fff;
            border: none;
            padding: 8px 10px;
            border-radius: 4px;
            transition: 0.3s ease;
        }

            .e1:hover {
                background-color: #2980b9;
            }

            .e1 i {
                font-size: 1.2em;
            }

        /* Nút Delete */
        .e2 {
            background-color: #e74c3c;
            color: #fff;
            border: none;
            padding: 8px 10px;
            border-radius: 4px;
            transition: 0.3s ease;
        }

            .e2:hover {
                background-color: #c0392b;
            }

            .e2 i {
                font-size: 1.2em;
            }
    </style>
    <div class="page-header">
        <h2 class="header-title">Danh Sách Phòng</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Quản lí Phòng</a>
                <a class="breadcrumb-item active" href="#">Phòng</a>
                @*                <a class="breadcrumb-item" href="#">E-commerce</a>
                <span class="breadcrumb-item active">Orders List</span>*@
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-8">
                    <div class="d-md-flex">
                    </div>
                </div>
                <div class="col-lg-4 text-right">
                    <a href="/Phongs/Create" class="text-white">
                        <button class="btn btn-primary">
                            <i class="anticon anticon-plus-circle m-r-5"></i>
                            <span>Thêm Phòng</span>
                        </button>
                    </a>

                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>
                                <div class="checkbox">
                                    <input id="checkAll" type="checkbox">
                                    <label for="checkAll" class="m-b-0"></label>
                                </div>
                            </th>
                            <th>ID</th>
                            <th>Tên Phòng</th>
                            <th>Diện Tích</th>
                            <th>Giá Phòng</th>
                            <th>Trạng Thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="checkbox">
                                        <input id="@item.IdPhong" type="checkbox">
                                        <label for="@item.IdPhong" class="m-b-0"></label>
                                    </div>
                                </td>
                                <td>
                                    @item.IdPhong
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @*<img class="img-fluid rounded" src="~/assetsManage/images/others/thumb-9.jpg" style="max-width: 60px" alt="">*@
                                        <a href="/Phongs/Details/@item.IdPhong"></a>
                                        <h6 class="m-b-0 m-l-10">@item.TenPhong</h6>

                                    </div>
                                </td>
                                
                               
                                <td>@item.DienTich</td>
                                <td>@item.GiaPhong</td>
                                <td>
                                    @item.TrangThai
                                </td>
                                <td class="text-right">
                                    <a href="/Phongs/Edit/@item.IdPhong ">
                                        <button class="e1">
                                            <i class="anticon anticon-edit"></i>
                                        </button>
                                    </a>
                                    <a href="/Phongs/Delete/@item.IdPhong">
                                        <button class="e2">
                                            <i class="anticon anticon-delete"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
