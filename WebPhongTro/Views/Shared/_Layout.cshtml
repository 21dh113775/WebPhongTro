
@{
    string username = User.Identity.Name;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Phòng Trọ</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="/images/movie_filter_FILL0_wght400_GRAD0_opsz48.svg">
    <link href="https://fonts.googleapis.com/css2?family=Mukta:wght@500&display=swap" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="~/css/forms.css" rel="stylesheet" />
</head>

<body>
    <nav class="nav-bar">
        <div class="logo">
            Phòng Trọ
        </div>
        <ul class="nav-link">
            <li><a class="active" href="/Home/Index">Trang chủ</a></li>
            <li><a href="/Home/About">Giới Thiệu</a></li>
            <li><a href="/Home/About">Thông tin liên lạc</a></li>

            @if (!string.IsNullOrEmpty(username))
            {
                <li>

                    <a href="#">Thông tin cá nhân<i class="fa fa-caret-down"></i></a>

                    <ul class="dropdown-nav-link">
                        <li><a href="/Phong/Add">Trang cá nhân</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a href="/Users">Quản lí</a></li>
                        }
                        <li><a href="/UserAuthentication/Logout">Đăng Xuất</a></li>
                    </ul>
                </li>
            }

            @if (string.IsNullOrEmpty(username))
            {
                <li><a href="/UserAuthentication/Login">Đăng Nhập/Đăng kí</a></li>
               
            }
             
            
        </ul>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        &#169; Phòng trọ Huflit 2023
    </footer>
</body>
</html> 